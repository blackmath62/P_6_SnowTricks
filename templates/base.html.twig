<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{% block stylesheets %}
			
			<link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,700,300italic,400italic,700italic" rel="stylesheet" type="text/css">
			<link rel="stylesheet" href="bootswatch-master/dist/flatly/bootstrap.min.css">
			<!-- <link rel="stylesheet" href="css/style.css"> -->
		{% endblock %}
	</head>
	<body>
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<a class="navbar-brand" href="{{path('home')}}">Snow Tricks</a>
			<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>

			<div class="collapse navbar-collapse" id="navbarColor01">
				<ul class="navbar-nav ml-auto mr-3">
					<li class="nav-item">
						<a class="nav-link" href="{{path('home')}}">Accueil
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{path('home')}}">Tricks
						</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{path('create')}}">Se connecter</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="{{path('create')}}">S'inscrire</a>
					</li>
				</ul>
			</div>
		</nav>
		<!-- Header -->
		<header class="masthead d-flex">
			<div class="container text-center my-auto">
				<h1 class="mb-1">Snow Tricks</h1>
				<h3 class="mb-5">
					<em>Tricks de Snowboard</em>
				</h3>
				<a class="btn btn-primary btn-xl js-scroll-trigger" href="#tricks">Voir les Tricks</a>
			</div>
			<div class="overlay"></div>
		</header>
			<div href="#tricks" style="position: fixed; bottom: 20px; right: 25px; width: 40px; height: 40px; color: rgb(238, 238, 238); line-height: 40px; text-align: center; background-color: rgb(34, 45, 50); cursor: pointer; border-radius: 5px; z-index: 99999; opacity: 0.7;">
				<i class="fa fa-chevron-up"></i>
			</div>
		<div class="container-fluid p-0 m-0"> {% block body %}{% endblock %}
			</div>
			{% block javascripts %}
				<script src="bootswatch-master/docs/_vendor/jquery/dist/jquery.min.js"></script>
				<script src="bootswatch-master/docs/_vendor/popper.js/dist/umd/popper.min.js"></script>
				<script src="bootswatch-master/docs/_vendor/bootstrap/dist/js/bootstrap.min.js"></script>
				<script src="bootswatch-master/docs/_assets/js/custom.js"></script>
			{% endblock %}
		</body>
	</html>
